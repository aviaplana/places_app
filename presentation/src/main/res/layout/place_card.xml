<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/card_container"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp">

        <ImageView
            android:id="@+id/card_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:layout_constraintTop_toTopOf="parent"
            android:scaleType="centerCrop"
            tools:background="@color/cardview_dark_background"
            android:contentDescription="@string/photo_of_place" />

        <TextView
            android:id="@+id/card_title"
            style="@style/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/card_image"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_margin="10dp"
            tools:text="Rhythmboat Cruises"/>

        <TextView
            android:id="@+id/card_vicinity"
            style="@style/body_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/card_title"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            tools:text="Pyrmont Bay Wharf Darling Dr, Sydney"/>

        <TextView
            android:id="@+id/card_is_open"
            style="@style/secondary_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/card_vicinity"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_margin="10dp"
            tools:text="Now open" />

        <com.albertviaplana.chamaassignment.presentation.nearbyPlaces.RatingStarsView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/card_is_open"
            app:layout_constraintRight_toRightOf="parent"
            tools:rating="3.5" />



    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
